{
  "name": "@zaptomcp/saamples",
  "version": "0.1.0",
  "description": "",
  "main": "dist/cjs/server/mcp-server.js",
  "module": "dist/esm/server/mcp-server.js",
  "types": "dist/esm/server/mcp-server.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm lint && rimraf ./dist",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "clean": "rm -rf .turbo node_modules",
    "dev": "run-p dev:sse dev:sth dev:agents typecheck",
    "dev:server:sse": "tsx watch --inspect --env-file=.env src/server/simple-sse-server.ts",
    "dev:server:sth": "tsx watch --inspect --env-file=.env src/server/simple-streamable-http.ts",
    "dev:sth": "tsx --env-file=.env src/client/simple-streamable-http.ts",
    "dev:agents": "tsx watch --inspect --env-file=.env src/client/simple-agents.ts",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src ",
    "start": "node --env-file=.env --enable-source-maps dist/server.js",
    "test": "vitest run --config ./vitest.config.js",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "keywords": [],
  "author": "Manuel S. Martone <manuel.martone@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/content-type": "^1.1.8",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^22.14.0",
    "fastify-tsconfig": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsc-files": "^1.1.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@langchain/core": "^0.3.46",
    "@langchain/ollama": "^0.2.0",
    "@zaptomcp/sdk": "workspace:^",
    "content-type": "^1.0.5",
    "cross-spawn": "^7.0.6",
    "eventsource": "^3.0.6",
    "eventsource-parser": "^3.0.1",
    "fastify": "^5.3.2",
    "fastify-type-provider-zod": "^4.0.2",
    "langchain": "^0.3.23",
    "pkce-challenge": "^5.0.0",
    "raw-body": "^3.0.0",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  }
}